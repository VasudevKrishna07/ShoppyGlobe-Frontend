# =======================
# API Base URL for backend
VITE_API_URL=http://localhost:5000/api
# For production
# VITE_API_URL=https://your-production-domain.com/api

# =======================
# Stripe public key (publishable key only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =======================
# Cloudinary configuration for image uploads
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# =======================
# App Info and Branding
VITE_APP_NAME=ShoppyGlobe
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Global e-commerce platform"

# =======================
# Frontend URLs for references
VITE_CLIENT_URL=http://localhost:3000
VITE_CLIENT_URL_PROD=https://your-production-domain.com

# =======================
# Feature toggles
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_CHAT_SUPPORT=false
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_SOCIAL_LOGIN=false

# =======================
# Analytics & Tracking IDs
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=1234567890

# =======================
# Social media links
VITE_FACEBOOK_URL=https://facebook.com/shoppyglobe
VITE_TWITTER_URL=https://twitter.com/shoppyglobe
VITE_INSTAGRAM_URL=https://instagram.com/shoppyglobe
VITE_LINKEDIN_URL=https://linkedin.com/company/shoppyglobe

# =======================
# Development & Debug Options
VITE_SHOW_DEBUG_INFO=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_API_TIMEOUT=30000

# =======================
# Styling and branding colors
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981
VITE_ACCENT_COLOR=#F59E0B

# =======================
# Contact information
VITE_SUPPORT_EMAIL=support@shoppyglobe.com
VITE_CONTACT_PHONE="+91-9876543210"
VITE_COMPANY_ADDRESS="123 Business Street, Mumbai, India"

# =======================
# SEO Metadata
VITE_META_TITLE="ShoppyGlobe - Global E-commerce Platform"
VITE_META_DESCRIPTION="Shop the world's best products on ShoppyGlobe"
VITE_META_KEYWORDS="ecommerce, shopping, online store, global shopping"
